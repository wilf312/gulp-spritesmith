{{#sprites}}
/* ------ {{name}}*/
.{{name}} {{#if isBtnHover}}, .{{nameHoverClass}}:hover {{/if}} {
    background-position: {{half.offset_x}} {{half.offset_y}};
    width: {{half.width}};
    height: {{half.height}};
    background-size: {{half.total_width}} {{half.total_height}};
}
@media only screen and (min-width:1024px){
    .{{name}} {{#if isBtnHover}}, .{{nameHoverClass}}:hover {{/if}} {
        background-position: {{px.offset_x}} {{px.offset_y}};
        width: {{px.width}};
        height: {{px.height}};
        background-size: {{total_width}}px {{total_height}}px;
    }
}
{{/sprites}}



